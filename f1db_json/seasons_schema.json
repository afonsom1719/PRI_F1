{
	"add-field-type": [
    {
        "name":"season_Text",
        "class":"solr.TextField",
        "indexAnalyzer":{
            "tokenizer":{
                "class":"solr.StandardTokenizerFactory"
            },
            "filters":[
                {"class":"solr.ASCIIFoldingFilterFactory", "preserveOriginal":true},
                {"class":"solr.LowerCaseFilterFactory"},
                {"class":"solr.SnowballPorterFilterFactory", "language":"English"},
                {"class":"solr.EdgeNGramFilterFactory", "minGramSize": 4 , "maxGramSize": 10}
            ]
        },
        "queryAnalyzer":{
            "tokenizer":{
                "class":"solr.StandardTokenizerFactory"
            },
            "filters":[
                {"class":"solr.ASCIIFoldingFilterFactory", "preserveOriginal":true},
                {"class":"solr.LowerCaseFilterFactory"},
                {"class":"solr.SnowballPorterFilterFactory", "language":"English"}
            ]
        }
    },
    {
        "name":"season_Year",
        "class":"solr.IntPointField"
    },
    {
        "name":"season_Url",
        "class":"solr.StrField"
    }
    ],
    "add-field": [
        {
            "name": "year",
            "type": "season_Year",
            "indexed": true
        },
        {
            "name": "url",
            "type": "season_Url",
            "indexed": true
        },
        {
            "name": "driver_changes",
            "type": "season_Text",
            "indexed": true
        },
        {
            "name": "reg_changes",
            "type": "season_Text",
            "indexed": true
        }
    ]
}

